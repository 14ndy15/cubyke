<section class="content">
    <div class="content__text">
        {{ page.getLocale('content') | raw }}
    </div>

    <div class="content__image content__image--two">
        {% for bike in bikes %}
        <div class="content__image__item">
            {{ imgTagContent(
                bike.webPath,
                bike.name,
                "100vw",
                1920)
            | raw
            }}
        </div>
        {% endfor %}
    </div>
</section>