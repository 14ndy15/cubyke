<section class="content">

    <div class="content__text">
        {{ page.getLocale('content') | raw }}
    </div>

    <div class="content__image content__image--two">
        {% for image in page.imagesGallery %}
            <div class="content__image__item">
                {{ imgTagContent(
                    image.getWebPath,
                    image.description,
                    "(min-width: 1200) 45vw, 100vw",
                    1920,
                    true)
                | raw
                }}
            </div>
        {% endfor %}
    </div>

</section>