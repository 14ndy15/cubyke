
<header class="header">

    <div class="logo">
        <a href="{{ path('index') }}">
            <img src="{{ asset('images/logo.png') }}" alt="Cubyke logo">
        </a>
    </div>

    <div class="menu-icon">
        <div class="menu-icon__middle"></div>
    </div>

    <nav class="nav swing-out-top-bck">
        <ul>
            <li><a href="{{ path('index') }}#hero">{% trans %}global.header.home{% endtrans %}</a></li>
            <li><a href="{{ url('index') }}#tours">{% trans %}global.header.tours{% endtrans %}</a></li>
            <li><a href="{{ url('index') }}#bikes">{% trans %}global.header.bikes{% endtrans %}</a></li>
            <li><a href="{{ url('index') }}#us">{% trans %}global.header.about_us{% endtrans %}</a></li>
            <li><a href="{{ url('index') }}#blog">{% trans %}global.header.blog{% endtrans %}</a></li>
        </ul>
    </nav>

    <div class="lang">
        <ul>
            <li>
                <a href="#">{{ app.request.locale }}</a>
                <ul class="dropdown">
                    {% if app.request.get('_route')  in ['blog_entry','blog_entry_alternative'] %}
                        {% if app.request.locale == 'es' %}
                            <li><a href="{{ path('blog_entry', {'_locale': 'en', '_id': id, '_name': name} ) }}">EN</a></li>
                            <li><a href="{{ path('blog_entry', {'_locale': 'de', '_id': id, '_name': name} ) }}">DE</a></li>
                        {% elseif app.request.locale == 'de' %}
                            <li><a href="{{ path('blog_entry', {'_locale': 'en', '_id': id, '_name': name} ) }}">EN</a></li>
                            <li><a href="{{ path('blog_entry', {'_locale': 'es', '_id': id, '_name': name} ) }}">ES</a></li>
                        {% else  %}
                            <li><a href="{{ path('blog_entry', {'_locale': 'es', '_id': id, '_name': name} ) }}">ES</a></li>
                            <li><a href="{{ path('blog_entry', {'_locale': 'de', '_id': id, '_name': name} ) }}">DE</a></li>
                        {% endif %}
                    {% else %}
                        {% if app.request.locale == 'es' %}
                            <li><a href="{{ path(app.request.get('_route'), {'_locale': 'en'} ) }}">EN</a></li>
                            <li><a href="{{ path(app.request.get('_route'), {'_locale': 'de'} ) }}">DE</a></li>
                        {% elseif app.request.locale == 'de' %}
                            <li><a href="{{ path(app.request.get('_route'), {'_locale': 'en'} ) }}">EN</a></li>
                            <li><a href="{{ path(app.request.get('_route'), {'_locale': 'es'} ) }}">ES</a></li>
                        {% else %}
                            <li><a href="{{ path(app.request.get('_route'), {'_locale': 'es'} ) }}">ES</a></li>
                            <li><a href="{{ path(app.request.get('_route'), {'_locale': 'de'} ) }}">DE</a></li>
                        {% endif %}
                    {% endif %}
                </ul>
            </li>
        </ul>
    </div>
</header>
