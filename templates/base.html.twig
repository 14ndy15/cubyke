{% if app.request.locale == 'es' %}
    {% set lang = 'es' %}
    {% set trekksoftLink = 'https://cubyke.trekksoft.com/es' %}
{% elseif app.request.locale == 'de' %}
    {% set lang = 'de' %}
    {% set trekksoftLink = 'https://cubyke.trekksoft.com/de' %}
{% else %}
    {% set lang = 'en' %}
    {% set trekksoftLink = 'https://cubyke.trekksoft.com/en_GB' %}
{% endif %}


<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>

        {{ include('frontend/global/_meta.html.twig') }}

        <title>{% block title %}{% endblock %} | Cubykess</title>
        {% block meta %}{% endblock %}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('app_no_critical')
            | replace({'rel="stylesheet"': 'rel="preload" as="style" onload="this.rel=\'stylesheet\'"'}) | raw  }}
        {% endblock %}
    </head>
    <body>

        {{ include('frontend/global/_header.html.twig') }}

        {{  render(controller('App\\Controller\\FrontendController::usCitizenText'))  }}

        {% block body %}
        {% endblock %}

        {{ include('frontend/global/_footer.html.twig') }}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('app_no_critical') | replace({'.js"': '.js" async'}) | raw }}
        {% endblock %}
    </body>
</html>
